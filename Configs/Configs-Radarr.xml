<?xml version="1.0"?>
<RadarrAutomation>
	<GlobalSettings>
		<OMDBAPI>c0bf4ba</OMDBAPI>
		<TMDBAPI>c0bf4ba89ba44fa38f9bf38ec42fdcd2</TMDBAPI>
		<!-- https://api.themoviedb.org/3/movie/550?api_key=798cb1c0648d68fc43ab0c94dac906e9 -->
		<CheckStatusOnly>False</CheckStatusOnly> <!-- If set to true this does not do any action, it will only output statics. Great for testing. Will perform online search-->
		<FindMissingOnly>True</FindMissingOnly> <!-- Look for only movies that do not exist in Radarr. Helps if using OMDBAPI free key because there is a 1000 searches-a-day limit. -->
		<UpdateNfoData>False</UpdateNfoData> <!-- Adds Nfo data to each movie if missing -->

		<UpdateMovieSeriesOnly>False</UpdateMovieSeriesOnly><!-- Only update movies that are in an adittional series subfolder (search using match operator)-->
		<MovieSeriesFolders>
			<Folder>Collection</Folder>
			<Folder>Anthology</Folder>
			<Folder>Series</Folder>
		</MovieSeriesFolders>

		<FilterMovieSubFolders> <!-- Always filter these folders (search using match operator) -->
			<Folder>Screeners</Folder>
			<Folder>Requests</Folder>
			<Folder>Subs</Folder>
			<Folder>Samples</Folder>
			<Folder>Trailers</Folder>
			<Folder>Pre-Roll</Folder>
		</FilterMovieSubFolders>

		<MoviesRootPath>E:\Media\Movies</MoviesRootPath>

		<UseRecentStoredIMDBDataDays>5</UseRecentStoredIMDBDataDays> <!-- For Future use: Stores data from IMDB for local use. Set to Zero (0) to disable.-->
		<UseRecentStoredTMDBDataDays>5</UseRecentStoredTMDBDataDays> <!-- For Future use: Stores data from TMDB for local use. Set to Zero (0) to disable.-->

        <VideoExtensions ext='.mkv,.mp4,.mpg,.mpeg,.avi'/>
	  <VideoSupportFiles ext='.srt'/>
	</GlobalSettings>


	<RadarrConfig>
		<ExternalURL></ExternalURL>
		<InternalURL>localhost</InternalURL>
		<Port>7878</Port>
		<EnableSSL>False</EnableSSL>
		<!--
			To get api key, open browser to http://localhost:7878/settings/general and copy API key here
		-->
		<API>c0bf4ba89ba44fa38f9bf38ec42fdcd2</API>

		 <!-- For Future use. Not Tested. Needed if login is required in Radarr -->
		<AuthenticationRequired>False</AuthenticationRequired>
		<!-- To generate a secure user credential file, run in powershell: Get-Credential | Export-CliXML Creds-Radarr.xml -->
		<Credentials>Creds-Radarr.xml</Credentials>
	</RadarrConfig>

	<MovieConfigs>

		<DownloadedMoviePath>D:\Data\Downloads\btsync</DownloadedMoviePath>
		<MovieRequestedMovePath>E:\Media\Movies\Requests</MovieRequestedMovePath>

		<!-- Enabling Move will determine the best location for the movie based on its PRIMARY genre found on TMDB and IMDB -->
		<MovetoGenreFolder>True</MovetoGenreFolder>

		<!-- If movie structure does not have individual folders, use the GenreBinding settings to determine where the movie wil be placed
			 This does not overwrite movie collection folders. The entire movie collection folder will be movied together (even if gneres are different)
		  -->
		<GenreBinder>
			<Genre Tag="Action" BindingFolder="Action & Adventure" />
			<Genre Tag="Adventure" BindingFolder="Action & Adventure" />
            <Genre Tag="Animation" BindingFolder="Children (Boys & Family)" />
			<Genre Tag="Barbie" BindingFolder="Children (Girls & Barbie)" />
			<Genre Tag="Classics" BindingFolder="Classics & History" />
            <Genre Tag="Comedy" BindingFolder="Comedies & Standup" />
            <Genre Tag="Comic" BindingFolder="Superhero & Comics" />
            <Genre Tag="Crime" BindingFolder="Thrillers & Crime Fiction" />
			<Genre Tag="Disney" BindingFolder="Children (Disney & Pixar)" />
			<Genre Tag="Holiday" BindingFolder="Holidays & Hallmark" />
			<Genre Tag="Christmas" BindingFolder="Holidays & Hallmark" />
			<Genre Tag="Snow" BindingFolder="Holidays & Hallmark" />
			<Genre Tag="Santa" BindingFolder="Holidays & Hallmark" />
			<Genre Tag="Hallmark" BindingFolder="Holidays & Hallmark" />
			<Genre Tag="Documentary" BindingFolder="Classics & History" />
            <Genre Tag="Drama" BindingFolder="Drama & Romance" />
			<Genre Tag="Fantasy" BindingFolder="Sci-Fi & Fantasy" />
			<Genre Tag="Family" BindingFolder="Children (Boys & Family)" />
            <Genre Tag="Superhero" BindingFolder="Superhero & Comics" />
            <Genre Tag="Historical" BindingFolder="Classics & History" />
            <Genre Tag="Horror" BindingFolder="Mysteries & Horrors" />
			<Genre Tag="Musical" BindingFolder="Drama & Romance" />
			<Genre Tag="Mystery" BindingFolder="Mysteries & Horrors" />
			<Genre Tag="Pixar" BindingFolder="Children (Disney & Pixar)" />
			<Genre Tag="Romance" BindingFolder="Drama & Romance" />
			<Genre Tag="Standup" BindingFolder="Comedies & Standup" />
			<Genre Tag="Sci-Fi" BindingFolder="Sci-Fi & Fantasy" />
			<Genre Tag="Science Fiction" BindingFolder="Sci-Fi & Fantasy" />
            <Genre Tag="Sports" BindingFolder="Sports & Westerns" />
			<Genre Tag="Thriller" BindingFolder="Thrillers & Crime Fiction" />
            <Genre Tag="War" BindingFolder="Action & Adventure" />
			<Genre Tag="Western" BindingFolder="Sports & Westerns" />
			<Genre Tag="Other" BindingFolder="Classics & History" />
		</GenreBinder>
	</MovieConfigs>
</RadarrAutomation>



